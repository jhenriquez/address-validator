{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "declaration": true,
    "lib": ["ES2020"],
  },
  "include": ["src", "specs"]
}

